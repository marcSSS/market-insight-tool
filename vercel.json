{
  "version": 2,
  "builds": [
    {
      "src": "frontend/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/*.css",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-railway-app.railway.app/api/$1"
    },
    {
      "src": "/analyze",
      "dest": "/frontend/analyze.html"
    },
    {
      "src": "/test",
      "dest": "/frontend/test.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 